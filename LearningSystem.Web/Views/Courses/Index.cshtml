@model IEnumerable<LearningSystem.Models.ViewModels.Course.CourseIndexViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TrainerName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EndDate)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TrainerName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StartDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EndDate)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
        </td>
    </tr>
}
</table>
<ul class="pagination">
    @{
        var itemsPerPage = Request["ItemsPerPage"];

        for (int i = 1; i <= ViewBag.Pages; i++)
        {
            if ((int)ViewBag.CurrentPage == i)
            {
                <li class="active">@Html.ActionLink(i.ToString(), "Index", "Courses", new { Page = i, ItemsPerPage = itemsPerPage }, new {})</li>
            }
            else
            {
                <li>@Html.ActionLink(i.ToString(), "Index", "Courses", new { Page = i, ItemsPerPage = itemsPerPage }, new { })</li>
            }

        }
    }
    
</ul>   